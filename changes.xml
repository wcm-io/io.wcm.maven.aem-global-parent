  <body>

    <release version="1.2.18" date="not released">
      <action type="update" dev="sseifert">
        Update CONGA and CONGA AEM Plugin version.
      </action>
      <action type="update" dev="sseifert">
        Switch from osgi.annotation to org.osgi.annotation.versioning artifact.
      </action>
      <action type="update" dev="sseifert">
        Add "cq:lastRolledout" and "cq:lastRolledoutBy" properties to ignore list when downloading content via wcmio-content-package-maven-plugin.
      </action>
    </release>

    <release version="1.2.16" date="2018-02-05">
      <action type="update" dev="sseifert">
        Update CONGA version.
      </action>
