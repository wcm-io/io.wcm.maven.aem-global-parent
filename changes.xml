    </release>

    <release version="1.2.0" date="2017-05-29">
      <action type="update" dev="sseifert">
        Update to wcmio-content-package-maven-plugin 1.4.0.
      </action>
      <action type="update" dev="sseifert">
        Do not register extension of content-package-maven-plugin by default, to let projects decide between wcmio-content-package-maven-plugin and content-package-maven-plugin.
        See https://wcm-io.atlassian.net/wiki/x/7dELAw for a migration guideline.
      </action>
      <action type="update" dev="sseifert">
        Set failOnMissingEmbed for content-package-maven-plugin and wcmio-content-package-maven-plugin.
      </action>
      <action type="update" dev="sseifert">
        Update CONGA and CONGA AEM plugin versions.
      </action>
      <action type="update" dev="sseifert">
        Update to latest plugins.
      </action>
    </release>

    <release version="1.1.8" date="2017-04-04">
      <action type="update" dev="sseifert">
        Update to latest plugins.
      </action>
      <action type="update" dev="sseifert">
        Update global-parent dependency to 14.
      </action>
    </release>

    <release version="1.1.6" date="2017-02-09">
      <action type="update" dev="sseifert">
        Update to latest plugins.
      </action>
      <action type="update" dev="sseifert">
        Add CONGA maven plugins: conga-maven-plugin, conga-aem-maven-plugin.
      </action>
    </release>

    <release version="1.1.4" date="2017-01-02">
      <action type="add" dev="sseifert">
        Add bnd plugins for Sling Context-Aware Configuration and Sling Models.
      </action>
      <action type="add" dev="sseifert">
        Add OSGi annotations for DS and metatype.
      </action>
      <action type="update" dev="sseifert">
        Update global-parent dependency to 13.
      </action>
      <action type="update" dev="sseifert">
        Update to wcmio-content-package-maven-plugin 1.3.0.
      </action>
      <action type="update" dev="sseifert">
        Maven Sling Plugin: Do not set mountByFS to false explicitly - false is already the default value.
      </action>
      <action type="update" dev="sseifert">
        Update dependencies.
      </action>
    </release>

    <release version="1.1.2" date="2016-11-17">
      <action type="update" dev="sseifert">
        Update global-parent dependency to 12.
      </action>
      <action type="update" dev="sseifert">
        Enable validation of JSON and Sightly HTML files by default.
      </action>
      <action type="update" dev="sseifert">
        Update to wcmio-content-package-maven-plugin 1.2.2.
      </action>
    </release>

    <release version="1.1.0" date="2016-07-18">
      <action type="update" dev="sseifert">
        Update global-parent dependency to 11.
      </action>
      <action type="update" dev="sseifert">
        Add full support of OSGi DS and Metatype annotations and remove Maven SCR Plugin.
        Felix SCR annotations are still supported as well, but it is recommended to migrate to OSGi annotations.
        Support for Felix SCR annotations will be removed in the future.
        You should remove all maven-scr-plugin invocations from your POMs with this update!
      </action>
      <action type="update" dev="sseifert">
        org.apache.felix.scr.annotations are no longer included as default provided dependency, but are still supported if included explicitly.
      </action>
      <action type="update" dev="sseifert">
        Increase wcmio-content-package-maven-plugin retryCount to make deployment of AEM service packs more reliable.
      </action>
      <action type="update" dev="sseifert">
        Update to latest wcm.io Maven Plugins.
      </action>
    </release>

    <release version="1.0.16" date="2015-11-12">
      <action type="update" dev="sseifert">
        Update global-parent dependency to 10.
      </action>
      <action type="update" dev="sseifert">
        Update build plugins to latest versions.
      </action>
    </release>

    <release version="1.0.14" date="2015-07-16">
