      </action>
      <action type="update" dev="sseifert">
        Update global-parent dependency to 17.
      </action>
    </release>

    <release version="1.2.6" date="2017-09-12">
      <action type="update" dev="sseifert">
        Update to wcmio-content-package-maven-plugin 1.6.0.
      </action>
