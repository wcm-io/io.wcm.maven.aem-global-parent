      </action>
    </release>

    <release version="1.0.6" date="2015-03-09">
      <action type="update" dev="sseifert">
        Update global-parent dependency to 6.
      </action>
      <action type="update" dev="sseifert">
        Update to wcmio-content-package-maven-plugin 1.1.0 including support for bundle activation state check on package deploy.
      </action>
      <action type="update" dev="sseifert">
        Update to nodejs-maven-plugin 1.0.4.
      </action>
    </release>

    <release version="1.0.4" date="2014-12-03">
      <action type="fix" dev="sseifert" issue="WCMIO-33">
        Add "jcr:uuid" and "cq:lastReplicationAction" properties to ignore list when downloading content via wcmio-content-package-maven-plugin.
      </action>
    </release>

    <release version="1.0.2" date="2014-10-22">
      <action type="update" dev="sseifert">
        Add nodejs-maven-plugin plugin incl. m2e lifecycle-mapping.
      </action>
      <action type="update" dev="sseifert">
        Add cq-maven-plugin plugin.
      </action>
      <action type="update" dev="sseifert" issue="WCMIO-8">
        Do not inherit maven central release configuration to child POMs.
      </action>
      <action type="update" dev="sseifert">
        Add build number and build timestamp to bundle descriptions.
      </action>
      <action type="update" dev="sseifert">
        Define org.apache.felix.scr.annotations and org.osgi.annotation as default provided dependencies.
      </action>
    </release>

    <release version="1.0.1" date="2014-09-18">
      <action type="update" dev="sseifert">
        Move m2e lifecycle-mapping definition to separate profile to make sure it gets not active when invoking maven outside eclipse.
      </action>
    </release>

    <release version="1.0.0" date="2014-09-12">
      <action type="update" dev="sseifert">
        Initial release.
      </action>
    </release>

