        Update global-parent dependency to 9.
      </action>
      <action type="update" dev="sseifert">
        Update com.day.jcr.vault:content-package-maven-plugin to 0.0.24.
      </action>
    </release>

    <release version="1.0.12" date="2015-07-06">
      <action type="update" dev="sseifert">
        Update global-parent dependency to 8.
      </action>
    </release>

    <release version="1.0.10" date="2015-05-28">
      <action type="update" dev="sseifert">
        Update all build plugins to latest versions.
      </action>
      <action type="update" dev="sseifert">
        Enable strict mode for maven-scr-plugin and define execution of scr goal by default.
      </action>
      <action type="update" dev="sseifert">
        Update global-parent dependency to 7.
      </action>
    </release>

    <release version="1.0.8" date="2015-03-20">
      <action type="update" dev="sseifert">
        Update to nodejs-maven-plugin 1.0.6.
      </action>
      <action type="update" dev="sseifert">
